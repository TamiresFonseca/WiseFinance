<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Rótulo (label) fora do TextInputLayout -->
    <TextView
        android:id="@+id/labelNome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        android:text="Qual seu nome?"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"/>

    <!-- TextInputLayout com hint vazio -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        app:layout_constraintStart_toEndOf="@id/labelNome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <!-- TextInputEditText com hint -->

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nome7"
        style="@style/caixinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/caixa"
        android:hint="Digite seu nome completo"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="58dp" />


    <!-- TextInputLayout com hint vazio -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        app:layout_constraintStart_toEndOf="@id/labelNome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp">

        <!-- TextInputEditText com hint -->

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nome2"
        style="@style/caixinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/caixa"
        android:hint="Digite seu nome completo"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginTop="58dp" />

    <TextView
        android:id="@+id/labelNome2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        android:text="Endereço de e-mail"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nome2"
        />

    <!-- TextInputLayout com hint vazio -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        app:layout_constraintStart_toEndOf="@id/labelNome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp">

        <!-- TextInputEditText com hint -->

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nome3"
        style="@style/caixinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/caixa"
        android:hint="Digite seu e-mail"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/nome2"
        android:layout_marginStart="10dp"
        android:layout_marginTop="58dp" />


    <TextView
        android:id="@+id/labelNome4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        android:text="Telefone"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nome3"
       />

    <!-- TextInputLayout com hint vazio -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        app:layout_constraintStart_toEndOf="@id/labelNome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp">

        <!-- TextInputEditText com hint -->

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nome4"
        style="@style/caixinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/caixa"
        android:hint="Digite seu telefone"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/nome3"
        android:layout_marginStart="10dp"
        android:layout_marginTop="58dp" />


    <!-- TextInputLayout com hint vazio -->
    <TextView
        android:id="@+id/labelNome7"
        style="@style/caixinha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:text="Data de nascimento"
        android:textSize="16dp"
        app:layout_constraintTop_toBottomOf="@+id/nome4"
         />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        style="@style/caixinha"
        app:layout_constraintStart_toEndOf="@id/labelNome"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp">

        <!-- TextInputEditText com hint -->

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/nome6"
        style="@style/caixinha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/caixa"
        android:hint="Digite seu aniversário"
        android:inputType="textEmailAddress"
        app:layout_constraintTop_toBottomOf="@+id/nome4"
        android:layout_marginStart="10dp"
        android:layout_marginTop="58dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
